<div class="container">
  <div class="text-center">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: 'form-signin' }) do |f| %>
      <%= image_tag("dmc_logo", class: "mb-4", width: "72", height: "72") %>
      <h1 class="h3 mb-3 font-weight-normal">Acesso</h1>

      <label for="inputEmail" class="sr-only">Email</label>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control', placeholder: "Email", required: true %>

      <label for="inputPassword" class="sr-only">Senha</label>
      <%= f.password_field :password, autocomplete: "current-password", class: 'form-control', placeholder: "Senha", required: true %>

      <% if devise_mapping.rememberable? %>
        <div class="checkbox mb-3">
          <label>
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me, class: 'form-check-label' %>
          </label>
        </div>
      <% end %>

      <%= f.submit "Entrar", class: "btn btn-lg btn-primary btn-block" %>
      <%= render "devise/shared/links" %>
      <p class="mt-5 mb-3 text-muted">&copy; 2024</p>
    <% end %>
  </div>
</div>